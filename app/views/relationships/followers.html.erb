<div class="relationship-lists">
<h1 class="mt-5 mb-5">フォロワー</h1>
<% if @users.exists? %>
  <table class='table'>
    <thead>
      <tr>
        <th>プロフィール画像</th>
        <th>ニックネーム</th>
        <th>自己紹介文</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.image? %>
            <%= image_tag user.image.url, class: "icon_image" %>
          <% else %>
            <%= image_tag "/assets/default.png", class: "icon_image" %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td>
          <% if current_user != user %>
            <div id="users_<%= user.id %>">
              <div class="follow-btn-index">
                <%= render "relationships/follow-btn-index", user: user %>
              </div>
            </div>
          <% end %>
        </td>
        <td><%= link_to '本棚を見る', user_path(user), class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <div class="none">フォロワーはいません</div>
<% end %>
</div>