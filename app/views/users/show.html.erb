<div class="container">
  <h1 class="mb-5">マイページ</h1>
  <h2 class="heading mb-5">プロフィール</h2>
    <div class="row">
      <div class="left-content col-6">
        <% if @user.image? %>
          <%= image_tag @user.image.url, class: "icon_image" %><br>
        <% else %>
          <%= image_tag "/assets/default.png", class: "icon_image" %>
        <% end %>
        フォロー数:
        <%= link_to user_followings_path(@user) do %>
          <%= @user.followings.count %>
        <% end %>
        フォロワー数:
        <%= link_to user_followers_path(@user) do %>
          <%= @user.followers.count %>
        <% end %>
        <% if current_user != @user %>
          <% if current_user.following?(@user) %>
            <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
         <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
          <% end %>
        <% end %>

        <% if current_user != @user %>
          <% if (current_user.following? @user) && (@user.following? current_user)  %>
            <%= link_to 'chatを始める', message_path(@user.id) %>
          <% end %>
        <% end %>

        <%= link_to 'DM', messages_path, class: "btn btn-info" %>

      </div>
      <div class="right-content col-6">
        <div class="profile-name">
          <h5>ニックネーム</h5>
            <%= @user.name %>
        </div>
        <div class="profile-introduction">
          <h5>紹介文</h5>
            <%= @user.introduction %>
        </div>
        <% if @user.id == current_user.id %>
          <%= link_to "プロフィール編集", edit_user_path(@user) %>
        <% end %>
      </div>
    </div>
    <h1 class="mb-5">本棚</h1>
      <div class="row">
        <% @books.each do |book| %>
          <div class="col-3">
            <%= link_to book_path(book.id) do %>
              <%= image_tag book.image %><br />
            <% end %>
            タイトル:<%= book.title %><br>
            著者名:<%= book.author %><br>
            <% if @user.id == current_user.id %>
              <%= link_to "本棚から外す", book_path(book), method: :delete, class: "btn btn-info" %>
            <% end %>
          </div>
        <% end %>
      </div>
  </div>