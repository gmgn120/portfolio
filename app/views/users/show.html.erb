<div class="container">
  <h1 class="mb-5">マイページ</h1>
  <h2 class="heading mb-5">プロフィール</h2>
    <div class="row">
      <div class="left-content col-6">
        <% if @user.image? %>
          <%= image_tag @user.image.url, class: "icon_image" %><br>
        <% else %>
          <%= image_tag "/assets/default.png", class: "icon_image" %>
        <% end %>
        <div id="user_<%= @user.id %>">
          <div class="follow-count">
            <%= render "relationships/follow-count", user: @user %>
         </div>
        <% if current_user != @user %>
            <div class="follow-btn">
              <%= render "relationships/follow-btn", user: @user %>
            </div>
        <% end %>
         </div>
        <% if current_user != @user %>
          <% if (current_user.following? @user) && (@user.following? current_user)  %>
            <%= link_to 'chatを始める', message_path(@user.id) %>
          <% end %>
        <% end %>
        <% if @user.id == current_user.id %>
        <%= link_to 'DM', messages_path, class: "btn btn-info" %>
        <% end %>

      </div>
      <div class="right-content col-6">
        <div class="profile-name">
          <h5>ニックネーム</h5>
            <%= @user.name %>
        </div>
        <div class="profile-introduction">
          <h5>紹介文</h5>
            <%= @user.introduction %>
        </div>
        <% if @user.id == current_user.id %>
          <%= link_to "プロフィール編集", edit_user_path(@user) %>
        <% end %>
      </div>
    </div>
    <h1 class="mb-5">本棚</h1>
     <div class="books card mb-5">
      <div class="row">
        <% @books.each do |book| %>
          <div class="col-3">
            <div id="bookshelf_<%= book.id %>">
              <%= link_to book_path(book.id) do %>
                <%= image_tag book.image %><br />
              <% end %>
              タイトル:<%= book.title %><br>
              著者名:<%= book.author %><br>
              <% if @user.id == current_user.id %>
                <%= link_to "本棚から外す", book_path(book), method: :delete, remote: true, class: "btn btn-warning" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>