<div class= "book-detail">
  <div class="book-top">
    <h1>本詳細</h1>
    <div class="book-image">
      <%= image_tag @book.image, class: 'size'%>
    </div>
    <div class="book-title">
        タイトル：<%= @book.title %><br>
        著者名：<%= @book.author %><br>
        出版日：<%= @book.published_date %>
    </div>
   </div>

   <%# if @book.review.present? %>
  <div class="book-bottom">
    <div class="book-rate">
      評価：<%= @book.rate %>点 | <%= @book.title %>
       <div id="star-rate-<%= @book.id %>"></div>
        <script>
            $('#star-rate-<%= @book.id %>').raty({
              size: 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true,
              readOnly: true,
              score: <%= @book.rate %>,
            });
        </script>
      </div>
      <div class="book-review">
        <%= @book.review %>
      </div>
      <div class="review-edit">
      <% if @book.user_id == current_user.id %>
        <%= link_to "レビューを書く", edit_book_path(@book), class: "btn btn-primary" %>
      <% end %>
      </div>
      <div class="book-favorite">
      <% if @book.favorited_by?(current_user) %>
           <%= link_to book_favorites_path(@book), method: :delete do %>
             ♥<%= @book.favorites.count %>
           <% end %>
        <% else %>
           <%= link_to book_favorites_path(@book), method: :post do %>
             ♡<%= @book.favorites.count %>
           <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="comments">
<p>コメント件数：<%= @book.comments.count %></p>
<% @book.comments.each do |comment| %>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
  <% if comment.user == current_user %>
  <div class="comment-delete">
    <%= link_to "削除", book_comment_path(comment.book, comment), method: :delete %>
  </div>
  <% end %>
<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[@book, @comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>
