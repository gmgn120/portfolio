<div class="room-index">
  <h2 class="mt-5 mb-5">メッセージ一覧</h2>
  <% if @rooms.empty? %>
    <p>相互フォローの相手にメッセージを送ってみよう</p>
  <% else %>
    <table class="table">
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <%= link_to message_path(opponent_user(room).id) do %>
              <% if opponent_user(room).image? %>
                <%= image_tag opponent_user(room).image.url, class: "icon_mini" %>
              <% else %>
                <%= image_tag "default.png", class: "icon_mini" %>
              <% end %>
              <%= opponent_user(room).name %>
            <% end %>
          </td>
          <td class="dm_message">
            <%= latest_message_preview(room) %>
          </td>
          <td>
            <h6 style="color: #C0C0C0;"><%= latest_message_time(room) %></h6>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
